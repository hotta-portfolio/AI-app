<h2>「<%= @knowhow.title %>」を購入</h2>
<p>金額: <%= @knowhow.price %>円</p>

<%= form_with url: knowhow_purchases_path(@knowhow), method: :post, id: "payment-form" do |f| %>
  <div id="card-element"><!-- Stripeカード情報入力欄 --></div>
  <%= f.hidden_field :stripe_token, id: "stripe_token" %>
  <%= f.submit '購入する' %>
<% end %>

<%= javascript_include_tag "https://js.stripe.com/v3/" %>
<%= javascript_import_module_tag "stripe_payment" %>
